<project name="burp-hash build" basedir="." default="build.jar">
    <property name="build.dir" value="build"/>
    <property name="src.dir" value="src"/>
    <property name="dist.dir" value="dist"/>
    <property name="dist.jar" value="${dist.dir}/burp-hash.jar"/>
    
    <target name="clean" description="Clean up">
        <echo>Cleaning up...</echo>
        <delete>
            <fileset dir="${build.dir}"/>
            <fileset dir="${dist.dir}"/>
        </delete>
    </target>
    
    <target name="build" depends="clean" description="Build project">
    </target>
    
    <target name="build.jar" depends="build" description="Deploy to local webserver">
        <echo>Deleting files from dist</echo>
        <delete>
            <fileset dir="${dist.dir}"/>
        </delete>
        
        <echo>Building jar</echo>
        <jar destfile="${dist.jar}" basedir="${build.dir}"/>
        
        <antcall target="clean"/>
    </target>

</project>
